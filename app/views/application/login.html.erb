<div class="container" ng-controller="LoginController as ctrl">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Por favor, realize o login:</h1>
      <div class="account-wall">
        <form class="form-signin" novalidate ng-submit="ctrl._login();">
          <input type="text" class="form-control" placeholder="Login" ng-model="ctrl.login" required autofocus>
          <input type="password" class="form-control" placeholder="Senha" ng-model="ctrl.password" required>
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            Entrar</button>
        </form>
      </div>
    </div>
  </div>
</div>