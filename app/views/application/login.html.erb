<div class="container" ng-controller="LoginController as ctrl">
  <div class="row">
    <div class="col-md-12">
        <% flash.each do |key, value| %>
            <%= content_tag :div, value, class: "alert alert-#{key}" %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Por favor, realize o login:</h1>
      <div class="account-wall">
        <form class="form-signin" action="<%= login_post_path %>" method="POST">
          <input type="text" name="user[login]" class="form-control" placeholder="Login" required autofocus>
          <input type="password" name="user[password]" class="form-control" placeholder="Senha" required>
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            Entrar</button>
        </form>
      </div>
    </div>
  </div>
</div>