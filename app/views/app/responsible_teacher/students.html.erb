<div class="row">
  <div class="col-md-10 col-md-offset-1" ng-controller="StudentController as ctrl">

    <!-- Listagem de estudantes -->
    <div class="list-students" ng-hide="ctrl._formStudent">
        <legend>Gestão de alunos</legend>
        <table class="table table-hovered">
          <tr>
            <th>RA</th>
            <th>Nome</th>
            <th>Editar</th>
            <th>Excluir</th>
          </tr>
          <tr ng-repeat="student in ctrl.students">
            <td>{{student.ra}}</td>
            <td>{{student.name}}</td>
            <td><a ng-click="ctrl.formStudent(student)" href="#"><span class="glyphicon glyphicon-pencil"></span></a></td>
            <td><a ng-click="ctrl.deleteStudent(student)" href="#"><span class="glyphicon glyphicon-remove"></a></span></td>
          </tr>
          <tr>
        </table>
        <div class="row text-center">
          <button ng-click="ctrl.formStudent()" class="btn btn-primary new-student">Novo estudante</button>
        </div>
    </div>

    <!-- Formulário para novos estudantes e edição de estudante -->
    <div class="form-student" ng-show="ctrl._formStudent">
      <form class="form-horizontal" novalidate>
        <fieldset>
          <!-- Form Name -->
          <legend>Cadastrar aluno</legend>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-4 control-label" for="ra">RA</label>
            <div class="col-md-5">
              <input id="ra" name="ra" type="text" placeholder="RA" ng-model="ctrl.currentStudent.ra" ng-disabled="ctrl.inEditing" class="form-control input-md" required="">
              <span class="help-block">Digite o RA do aluno</span>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-4 control-label" for="name">Nome</label>
            <div class="col-md-5">
              <input id="name" name="name" type="text" placeholder="Nome" ng-model="ctrl.currentStudent.name" class="form-control input-md" required="">
              <span class="help-block">Digite o nome do aluno</span>
            </div>
          </div>

          <div class="form-group" ng-hide="ctrl.inEditing">
            <label class="col-md-4 control-label" for="ra">Login</label>
            <div class="col-md-5">
              <input id="login" name="login" type="text" placeholder="Login" ng-model="ctrl.currentStudent.login" class="form-control input-md" required="">
              <span class="help-block">Digite o login do aluno</span>
            </div>
          </div>

          <!-- Button -->
          <div class="form-group">
            <label class="col-md-4 control-label" for="submit"></label>
            <div class="col-md-5 text-center">
              <button id="submit" name="submit" class="btn btn-primary" ng-click="ctrl.newStudent()">Salvar</button>
              <button id="submit" name="submit" class="btn btn-warning" ng-click="ctrl.listStudents()">Voltar</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>


  </div>
</div>