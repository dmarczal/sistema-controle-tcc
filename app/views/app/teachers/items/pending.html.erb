<table class="table table-hovered">
    <tr>
        <th>TCC</th>
        <th>Anexo</th>
        <th>Aprovar</th>
        <th>Reprovar</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
        <td><%= item.timeline.to_s %></td>
        <td><%= link_to item.file, item.file %></td>
        <% if item.status_item.id == 3 %>
            <td><button class="btn btn-xs btn-success" disabled="true">Aprovado</button></td>
        <% else %>
            <td><%= link_to 'Aprovar', teachers_approve_path(item.timeline, item), class: 'btn btn-xs btn-success' %></td>
        <% end %>
        <% if item.status_item.id == 4 %>
            <td><button class="btn btn-xs btn-danger" disabled="true">Reprovado</button></td>
        <% else %>
            <td><%= link_to 'Reprovar', teachers_repprove_path(item.timeline, item), class: 'btn btn-xs btn-danger' %></td>
        <% end %>
    </tr>
    <% end %>
</table>
