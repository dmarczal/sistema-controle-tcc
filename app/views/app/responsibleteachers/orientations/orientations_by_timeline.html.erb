<legend>Orientações</legend>
<table class="table table-bordered">
    <tr>
        <th>Data de criação</th>
        <th>TCC</th>
        <th>Título da orientação</th>
        <th>Detalhar</th>
    </tr>
    <% @orientations.each do |orientation| %>
    <tr>
        <td><%= orientation.date.strftime("%d/%m/%Y") %></td>
        <td><%= orientation.timeline.student.name+' - TCC '+orientation.timeline.base_timeline.tcc+' - '+orientation.timeline.base_timeline.year.to_s %></td>
        <td><%= orientation.title %></td>
        <td><a href="/responsavel/orientacao/<%= orientation.id %>"><span class="glyphicon glyphicon-list-alt"></a></span></td>
    </tr>
    <% end %>
</table>