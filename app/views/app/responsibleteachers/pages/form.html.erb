<h1>Salvar página</h1>

<%= form_for [:responsible_teacher, @page], html: {class: "col-md-8 col-md-offset-2"} do |f| %>
  <div class="form-group">
    <label>Título</label>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label @page.errors[:title].join(', ').html_safe, class: 'col-md-12 alert alert-danger' if @page.errors.has_key? :title %>
  </div>

  <div class="form-group">
    <label>Conteúdo</label>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
    <%= f.label @page.errors[:body].join(', ').html_safe, class: 'col-md-12 alert alert-danger' if @page.errors.has_key? :body %>
  </div>

  <%= f.button glyph(:check) + " Salvar página", class: "btn btn-success" %>
<% end %>