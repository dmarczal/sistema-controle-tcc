<%= form_for @approval, remote: true, url: responsible_teacher_approvals_path do |f| %>
  <%= f.hidden_field :timeline_id, value: @approval.timeline_id %>
  <%= f.label 'Tipo de aprovação' %>
  <%= f.select :type_approval_id, options_for_select(TypeApproval.all.map{|ta|[ta.name, ta.id]}, @approval.type_approval_id), {}, {class: 'form-control', style: 'width: 100% !important;'} %>

  <%= f.label 'Arquivo' %>
  <%= f.file_field :file, class: 'form-control' %>
  <%= f.label @approval.errors[:file].join(', ').html_safe, class: 'col-md-12 alert alert-danger' if @approval.errors.has_key? :file %>

  <br>
  <%= f.submit 'Aprovar TCC', class: 'btn btn-primary' %>
<% end %>